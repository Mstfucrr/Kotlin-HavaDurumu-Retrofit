<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30sp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="483dp"
            android:background="#4500FFC4"
            android:orientation="vertical"
            android:padding="20sp">

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:background="#77C0EDFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forecast_city_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/forecast_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="170dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/forecast_img_icon"
                    android:layout_width="141dp"
                    android:layout_height="116dp"
                    app:srcCompat="@drawable/ic_baseline_cloud_queue_24" />

                <TextView
                    android:id="@+id/forecast_cond_text"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="151dp"
                        android:layout_height="140dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SICAKLIK"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="87dp">

                            <LinearLayout
                                android:layout_width="78dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ort."
                                    android:textSize="16sp"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="max : "
                                    android:textSize="16sp"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="min : "
                                    android:textSize="16sp"
                                    tools:ignore="DuplicateIds" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="71dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/forecast_avg_temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="11"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/forecast_max_temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="18"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/forecast_min_temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="78dp"
                                android:layout_height="wrap_content"
                                android:text="Nem : "
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/forecast_avg_hum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="122dp">

                            <LinearLayout
                                android:layout_width="78dp"
                                android:layout_height="116dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="UV : "
                                    android:textSize="18sp"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Yağış İhtimali : "
                                    android:textSize="18sp"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Max Rüzgar : "
                                    android:textSize="18sp"
                                    tools:ignore="DuplicateIds" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="71dp"
                                android:layout_height="118dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/forecast_uv"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:text="11"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/forecast_rain"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:text="18"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/forecast_max_wind"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:text="5"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Güneş"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Doğuş : "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Batış : "
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/forecast_sunrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/forecast_sunset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnForecast_Hourly"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:text="Saatlik Hava Durumu"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>